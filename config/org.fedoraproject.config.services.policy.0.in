<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">

<policyconfig>
  <vendor>system-config-services</vendor>
  <vendor_url>http://fedorahosted.org/system-config-services</vendor_url>
  <icon_name>system-config-services</icon_name>
  <action id="org.fedoraproject.config.services.info">
    <_description>Get information about system services</_description>
    <_message>Getting information about system services requires authentication</_message>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>
  <action id="org.fedoraproject.config.services.manage">
    <_description>Manage system services</_description>
    <_message>Managing system services requires authentication</_message>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin</allow_active>
    </defaults>
  </action>
</policyconfig>
